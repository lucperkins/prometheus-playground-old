groups:
- name: node.rules
  rules:
  - alert: InstanceDown
    expr: up{job="web"} == 0
    for: 10s
    labels:
      severity: page
    annotations:
      summary: "Instance {{ $labels.instance }} down"
      description: "Instance {{ $labels.instance }} of job {{ $labels.job }} has been down for more than 30 seconds"
      